{
  "name": "hannes/iwheb-auth",
  "description": "iWheb Authentication Service with Webling integration",
  "license": "proprietary",
  "require": {
    "php": ">=7.2",
    "ext-pdo": "*",
    "ext-sqlite3": "*",
    "ext-sodium": "*",
    "ext-json": "*",
    "ext-curl": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0"
  },
  "autoload": {
    "psr-4": { 
      "IWebAuth\\": "src/"
    },
    "files": [
      "src/exceptions.php",
      "src/logging.php"
    ],
    "classmap": [
      "src/Auth/",
      "src/Database/",
      "src/Http/"
    ]
  }
}
